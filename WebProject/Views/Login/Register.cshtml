
@{
    Layout = null;
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body  style="background-image:url(https://r-cf.bstatic.com/images/hotel/max1024x768/119/119673250.jpg); height: 100%; background-position:center; background-repeat: no-repeat; background-size: cover">
    <form action="/Login/Register" method="post">
        <table border="0" style="background-color:transparent" class="w3-text-white w3-display-left w3-large">
            <tr>
                <td colspan="2">
                    Create profile
                </td>
            </tr>
            <tr>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td>
                    Username
                </td>
                <td>
                    <input type="text" name="Username">
                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    <input required type="password" name="Password">
                </td>
            </tr>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    <input type="text" name="Name">
                </td>
            </tr>
            <tr>
                <td>
                    Surname
                </td>
                <td>
                    <input type="text" name="Surname">
                </td>
            </tr>          
            <tr>
                <td>
                    Gender
                </td>
                <td>
                    <select name="Gender">
                        <option value="Male">
                            Male
                        </option>
                        <option value="Female">
                            Female
                        </option>
                    </select>
                </td>
            </tr>   
            <tr>
                <td>
                    Role
                </td>
                <td>
                    <select name="Role">
                        <option value="Guest">
                            Guest
                        </option>
                        <option value="Host">
                            Host
                        </option>
                        <option value="Admin">
                            Admin
                        </option>
                    </select>
                </td>
            </tr>      
            <tr>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Sign Up" style="background-color:transparent; border:none" class="w3-text-blue w3-hover-aqua" />
                </td>
            </tr>
        </table>
    </form>
</body>